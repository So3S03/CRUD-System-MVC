@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Details";
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<h1 class="my-3 p-2">Department: @Model.Name  @ViewData["Title"]</h1>
<div class="container w-75">
    <!--Tabs-->
    <ul class="nav nav-tabs" id="departmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#adminstration" role="tab" aria-controls="adminstration" aria-selected="false">Adminstration</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <!--General Tab Content-->
        <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="row g-2">
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Department Code :</p>
                        <p class="fs-5 alert alert-primary">@Model.Code</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Department Name :</p>
                        <p class="fs-5 alert alert-primary">@Model.Name</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Department Description : </p>
                        <p class="fs-5 alert alert-primary">@Model.Description</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Department Creation Date : </p>
                        <p class="fs-5 alert alert-primary">@Model.DateOfCreation</p>
                    </div>
                </div>
            </div>
        </div>

        <!--Adminstration Tab Content-->
        <div class="tab-pane fade show p-4 border" id="adminstration" role="tabpanel" aria-labelledby="administration-tab">
            <div class="row g-2">
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Record Created By : </p>
                        <p class="fs-5 alert alert-primary">@Model.CreatedBy</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Record Created On : </p>
                        <p class="fs-5 alert alert-primary">@Model.CreatedOn</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Record Updated By : </p>
                        <p class="fs-5 alert alert-primary">@Model.LastModifiedBy</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p class="fw-bolder fs-4">Record Updated On : </p>
                        <p class="fs-5 alert alert-primary">@Model.LastModifiedOn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center px-5 my-3">
        <a class="btn btn-primary" asp-action="Index">Back To List</a>
        <a class="btn btn-success" asp-action="Update" asp-route-Id="@Model.Id">Edit On Department</a>
    </div>
</div>

@model CreateUpdateEmpsViewModel
@inject IDepartmentService _departmentService
@{
    var DepartmentList = await _departmentService.GetAllNotDeletedDepartment();
    var departmentsName = new SelectList(DepartmentList, nameof(GetAllDepartmentDto.Id), nameof(GetAllDepartmentDto.Name));
}
<div class="form-group row justify-content-between g-3">
    <div class="col-lg-6">
        <div>
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-3">
        <div>
            <label asp-for="IsActive" class="form-label"></label>
            <input asp-for="IsActive" class="form-check" type="checkbox" />
        </div>
    </div>
    <div class="col-lg-3">
        <div>
            <label asp-for="Gender" class="control-label d-block"></label>
            @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="@genderOption" />
                    @genderOption
                </label>
            }
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label class="form-label" asp-for="EmployeeWorkType"></label>
            <select asp-for="EmployeeWorkType" asp-items="Html.GetEnumSelectList<EmployeeWorkType>()" class="form-select">
                <option selected disabled hidden value="@null">Select Work Type .... </option>
            </select>
            <span class="text-danger" asp-validation-for="EmployeeWorkType"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <label asp-for="DepartmentId" class="form-label"></label>
            <select asp-for="DepartmentId" asp-items="@departmentsName" class="form-select">
                <option value="@null" disabled hidden selected>Select Department .... </option>
            </select>
        </div>
    </div>
</div>